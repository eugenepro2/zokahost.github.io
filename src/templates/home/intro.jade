section.intro
  .swiper
    .container
      .swiper-container.swiper-intro
        .swiper-wrapper
          .swiper-slide
            h2 WOW your users, with competent webhosting and more!1
            .intro__search
              .intro__search__btn
                input(type="submit" id="submit" value="")
                label(for="submit")
                  i.icon.icon-search
              .intro__search__input
                input(type="text" placeholder="Search for your perfect domain ...")
              .intro__search__select
                select
                  option(value="1") .co.uk
                  option(value="2") .co.uk1
                  option(value="3") .co.uk2
                  option(value="4") .co.uk3
            .intro__slide__btn
              a(href="#").btn.btn-primary I want to get started
              a(href="#") More Features
          .swiper-slide
            h2 WOW your users, with competent webhosting and more!2
            .intro__search
              .intro__search__btn
                input(type="submit" id="submit1" value="")
                label(for="submit1")
                  i.icon.icon-search
              .intro__search__input
                input(type="text" placeholder="Search for your perfect domain ...")
              .intro__search__select.end-xs
                select
                  option(value="1") .co.uk
                  option(value="2") .co.uk1
                  option(value="3") .co.uk2
                  option(value="4") .co.uk3
            .intro__slide__btn
              a(href="#").btn.btn-primary I want to get started
              a(href="#") More Features
